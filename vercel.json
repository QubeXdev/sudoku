{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "buildCommand": "yarn build",
        "outputDirectory": "build"
      }
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.py" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
