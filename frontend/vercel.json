{
  "version": 2,
  "builds": [
    {
      "src": "frontend/",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "installCommand": "yarn install --frozen-lockfile",
        "buildCommand": "yarn build",
        "outputDirectory": "frontend/build"
      }
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ]
}
